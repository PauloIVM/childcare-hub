{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"]
        },
    },
    "include": ["src", "__tests__", "__mocks__"],
    "exclude": ["node_modules"],
    "ts-node": {
        "files": true
    }
}
