{
  "name": "@childcare-hub/root",
  "version": "0.1.0",
  "private": true,
  "author": "PauloIVM",
  "workspaces": {
    "packages": ["packages/*"]
  },
  "scripts": {
    "dev": "concurrently -k -p \"[{name}]\" -n \"server,web\" -c \"cyan.bold,green.bold\" \"yarn dev:server\" \"yarn dev:web\"",
    "dev:web": "yarn workspace @childcare-hub/web dev",
    "dev:server": "yarn workspace @childcare-hub/server dev",
    "test:server": "yarn workspace @childcare-hub/server test",
    "build:server": "yarn workspace @childcare-hub/server build"
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
