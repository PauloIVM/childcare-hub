{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true
    },
    "include": ["packages"],
    "exclude": ["node_modules"]
}
